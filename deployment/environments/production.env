# LTET Employee Trust Portal - Production Environment Variables
# DO NOT COMMIT SENSITIVE VALUES TO VERSION CONTROL

# Application Configuration
NODE_ENV=production
PORT=3000
APP_NAME=LTET Employee Trust Portal
APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://ltet_admin:${DB_PASSWORD}@${DB_ENDPOINT}:5432/ltet_portal
DATABASE_SSL=true
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_TIMEOUT=30000

# Redis Configuration
REDIS_URL=redis://${REDIS_ENDPOINT}:6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0
REDIS_TIMEOUT=5000

# Authentication & Security
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d
ENCRYPTION_KEY=${ENCRYPTION_KEY}
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=${SESSION_SECRET}
SESSION_TIMEOUT=3600000
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}

# S3 Configuration
S3_DOCUMENTS_BUCKET=${S3_DOCUMENTS_BUCKET}
S3_BACKUPS_BUCKET=${S3_BACKUPS_BUCKET}
S3_REGION=us-east-1
CLOUDFRONT_DOMAIN=${CLOUDFRONT_DOMAIN}

# External API Integration
HRMS_API_URL=${HRMS_API_URL}
HRMS_API_KEY=${HRMS_API_KEY}
HRMS_TIMEOUT=30000

SAP_API_URL=${SAP_API_URL}
SAP_API_KEY=${SAP_API_KEY}
SAP_TIMEOUT=30000

PAYMENT_GATEWAY_URL=${PAYMENT_GATEWAY_URL}
PAYMENT_GATEWAY_KEY=${PAYMENT_GATEWAY_KEY}
PAYMENT_TIMEOUT=30000

# Email Configuration
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USERNAME=${SMTP_USERNAME}
SMTP_PASSWORD=${SMTP_PASSWORD}
EMAIL_FROM=noreply@ltet-portal.com
EMAIL_FROM_NAME=LTET Employee Trust Portal

# SMS Configuration
SMS_API_URL=${SMS_API_URL}
SMS_API_KEY=${SMS_API_KEY}
SMS_FROM_NUMBER=${SMS_FROM_NUMBER}

# Notification Configuration
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000
EMAIL_QUEUE_CONCURRENCY=10
SMS_QUEUE_CONCURRENCY=5

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png
UPLOAD_TIMEOUT=60000
OCR_ENABLED=true
OCR_CONFIDENCE_THRESHOLD=0.8

# Performance Configuration
CACHE_TTL=3600
API_RATE_LIMIT=1000
API_RATE_WINDOW=900000
REQUEST_TIMEOUT=30000
BODY_LIMIT=10mb

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TIMESTAMP=true
AUDIT_LOG_ENABLED=true
PERFORMANCE_LOG_ENABLED=true

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
TRACING_ENABLED=true
APM_SERVICE_NAME=ltet-portal

# Security Configuration
CORS_ORIGIN=${FRONTEND_URL}
CORS_CREDENTIALS=true
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
CSRF_PROTECTION=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true

# Feature Flags
AI_RECOMMENDATIONS_ENABLED=true
AUTO_APPROVAL_ENABLED=true
ADVANCED_ANALYTICS_ENABLED=true
MOBILE_APP_ENABLED=false

# Multi-Factor Authentication
MFA_ENABLED=true
MFA_ISSUER=LTET Portal
MFA_WINDOW=1
OTP_EXPIRY=300

# Scheme Configuration
SCHEME_CACHE_TTL=1800
ELIGIBILITY_CACHE_TTL=900
APPLICATION_TIMEOUT=1800000

# Payment Configuration
PAYMENT_BATCH_SIZE=100
PAYMENT_RETRY_ATTEMPTS=3
RECONCILIATION_SCHEDULE=0 */6 * * *

# Integration Health Monitoring
HEALTH_CHECK_HRMS=true
HEALTH_CHECK_SAP=true
HEALTH_CHECK_PAYMENT=true
INTEGRATION_TIMEOUT=10000

# Auto Scaling Configuration
CPU_THRESHOLD=70
MEMORY_THRESHOLD=80
SCALE_UP_COOLDOWN=300
SCALE_DOWN_COOLDOWN=600

# Disaster Recovery
DR_ENABLED=true
DR_RTO=240
DR_RPO=60
FAILOVER_THRESHOLD=5

# Compliance Configuration
AUDIT_RETENTION_DAYS=2555
PII_ENCRYPTION=true
GDPR_COMPLIANCE=true
SOX_COMPLIANCE=true

# Development/Debug (Production should be false)
DEBUG=false
VERBOSE_LOGGING=false
MOCK_EXTERNAL_APIS=false
SKIP_AUTH=false