# Development Environment Configuration
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://ltet_user:ltet_password@localhost:5432/ltet_portal
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TTL_DEFAULT=3600

# JWT Configuration
JWT_SECRET=dev-jwt-secret-key-change-in-production
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d

# API Configuration
API_PORT=3000
API_HOST=localhost
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=http://localhost:4200,http://localhost:3000
CORS_CREDENTIALS=true

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=pdf,jpg,jpeg,png
UPLOAD_STORAGE_PATH=./storage/uploads

# AWS Configuration (for development - use LocalStack or minio)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=dev-access-key
AWS_SECRET_ACCESS_KEY=dev-secret-key
S3_BUCKET_NAME=ltet-documents-dev
S3_ENDPOINT=http://localhost:9000

# Email Configuration (for development - use MailHog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@ltet-dev.com

# SMS Configuration (for development - use mock service)
SMS_PROVIDER=mock
SMS_API_KEY=dev-sms-key
SMS_API_URL=http://localhost:8082/sms

# External Service URLs
HRMS_API_URL=http://localhost:8080
HRMS_API_KEY=dev-hrms-key
HRMS_TIMEOUT=30000

SAP_API_URL=http://localhost:8081
SAP_API_KEY=dev-sap-key
SAP_TIMEOUT=30000

PAYMENT_GATEWAY_URL=http://localhost:8083
PAYMENT_GATEWAY_KEY=dev-payment-key
PAYMENT_GATEWAY_SECRET=dev-payment-secret

OCR_SERVICE_URL=http://localhost:8084
OCR_API_KEY=dev-ocr-key
OCR_CONFIDENCE_THRESHOLD=0.8

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Security Configuration
BCRYPT_ROUNDS=10
SESSION_SECRET=dev-session-secret
RATE_LIMIT_ENABLED=true
HELMET_ENABLED=true

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true

# Feature Flags
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_AUTO_APPROVAL=false
FEATURE_OCR_VALIDATION=true
FEATURE_REAL_TIME_NOTIFICATIONS=true

# Cache Configuration
CACHE_ENABLED=true
CACHE_USER_PROFILE_TTL=3600
CACHE_SCHEMES_TTL=1800
CACHE_APPLICATIONS_TTL=300

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Development Tools
DEBUG_ENABLED=true
HOT_RELOAD_ENABLED=true
MOCK_EXTERNAL_SERVICES=true