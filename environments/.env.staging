# Staging Environment Configuration
NODE_ENV=staging

# Database Configuration
DATABASE_URL=${DATABASE_URL}
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=30000
DATABASE_SSL=true

# Redis Configuration
REDIS_URL=${REDIS_URL}
REDIS_TTL_DEFAULT=3600
REDIS_CLUSTER_MODE=false

# JWT Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=200

# CORS Configuration
CORS_ORIGIN=${CORS_ORIGIN}
CORS_CREDENTIALS=true

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=pdf,jpg,jpeg,png
UPLOAD_STORAGE_PATH=/app/storage/uploads

# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
S3_BUCKET_NAME=ltet-documents-staging
S3_ENDPOINT=

# Email Configuration
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT}
SMTP_SECURE=true
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}
EMAIL_FROM=noreply@ltet-staging.com

# SMS Configuration
SMS_PROVIDER=aws-sns
SMS_API_KEY=${SMS_API_KEY}
SMS_API_URL=

# External Service URLs
HRMS_API_URL=${HRMS_API_URL}
HRMS_API_KEY=${HRMS_API_KEY}
HRMS_TIMEOUT=30000

SAP_API_URL=${SAP_API_URL}
SAP_API_KEY=${SAP_API_KEY}
SAP_TIMEOUT=30000

PAYMENT_GATEWAY_URL=${PAYMENT_GATEWAY_URL}
PAYMENT_GATEWAY_KEY=${PAYMENT_GATEWAY_KEY}
PAYMENT_GATEWAY_SECRET=${PAYMENT_GATEWAY_SECRET}

OCR_SERVICE_URL=${OCR_SERVICE_URL}
OCR_API_KEY=${OCR_API_KEY}
OCR_CONFIDENCE_THRESHOLD=0.8

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/app.log
LOG_MAX_SIZE=50m
LOG_MAX_FILES=10

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=${SESSION_SECRET}
RATE_LIMIT_ENABLED=true
HELMET_ENABLED=true

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true
APM_ENABLED=true
APM_SERVICE_NAME=ltet-portal-staging

# Feature Flags
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_AUTO_APPROVAL=true
FEATURE_OCR_VALIDATION=true
FEATURE_REAL_TIME_NOTIFICATIONS=true

# Cache Configuration
CACHE_ENABLED=true
CACHE_USER_PROFILE_TTL=3600
CACHE_SCHEMES_TTL=1800
CACHE_APPLICATIONS_TTL=300

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=ltet-backups-staging

# Performance Configuration
CLUSTER_MODE=false
MAX_MEMORY_USAGE=1024
GC_OPTIMIZATION=true

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/app/certs/cert.pem
SSL_KEY_PATH=/app/certs/key.pem