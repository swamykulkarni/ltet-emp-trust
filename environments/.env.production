# Production Environment Configuration
NODE_ENV=production

# Database Configuration
DATABASE_URL=${DATABASE_URL}
DATABASE_POOL_SIZE=50
DATABASE_TIMEOUT=30000
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=true

# Redis Configuration
REDIS_URL=${REDIS_URL}
REDIS_TTL_DEFAULT=3600
REDIS_CLUSTER_MODE=true

# JWT Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=500

# CORS Configuration
CORS_ORIGIN=${CORS_ORIGIN}
CORS_CREDENTIALS=true

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=pdf,jpg,jpeg,png
UPLOAD_STORAGE_PATH=/app/storage/uploads

# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
S3_BUCKET_NAME=ltet-documents-production
S3_ENDPOINT=
S3_ENCRYPTION=AES256

# Email Configuration
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT}
SMTP_SECURE=true
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}
EMAIL_FROM=noreply@ltet.com

# SMS Configuration
SMS_PROVIDER=aws-sns
SMS_API_KEY=${SMS_API_KEY}
SMS_API_URL=

# External Service URLs
HRMS_API_URL=${HRMS_API_URL}
HRMS_API_KEY=${HRMS_API_KEY}
HRMS_TIMEOUT=30000

SAP_API_URL=${SAP_API_URL}
SAP_API_KEY=${SAP_API_KEY}
SAP_TIMEOUT=30000

PAYMENT_GATEWAY_URL=${PAYMENT_GATEWAY_URL}
PAYMENT_GATEWAY_KEY=${PAYMENT_GATEWAY_KEY}
PAYMENT_GATEWAY_SECRET=${PAYMENT_GATEWAY_SECRET}

OCR_SERVICE_URL=${OCR_SERVICE_URL}
OCR_API_KEY=${OCR_API_KEY}
OCR_CONFIDENCE_THRESHOLD=0.85

# Logging Configuration
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/app.log
LOG_MAX_SIZE=100m
LOG_MAX_FILES=20

# Security Configuration
BCRYPT_ROUNDS=14
SESSION_SECRET=${SESSION_SECRET}
RATE_LIMIT_ENABLED=true
HELMET_ENABLED=true
SECURITY_HEADERS_ENABLED=true

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true
APM_ENABLED=true
APM_SERVICE_NAME=ltet-portal-production
SENTRY_DSN=${SENTRY_DSN}

# Feature Flags
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_AUTO_APPROVAL=true
FEATURE_OCR_VALIDATION=true
FEATURE_REAL_TIME_NOTIFICATIONS=true

# Cache Configuration
CACHE_ENABLED=true
CACHE_USER_PROFILE_TTL=3600
CACHE_SCHEMES_TTL=1800
CACHE_APPLICATIONS_TTL=300

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=2555
BACKUP_S3_BUCKET=ltet-backups-production
BACKUP_ENCRYPTION=true

# Performance Configuration
CLUSTER_MODE=true
CLUSTER_WORKERS=0
MAX_MEMORY_USAGE=2048
GC_OPTIMIZATION=true

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/app/certs/cert.pem
SSL_KEY_PATH=/app/certs/key.pem
SSL_CA_PATH=/app/certs/ca.pem

# Compliance Configuration
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=2555
DATA_ENCRYPTION_ENABLED=true
GDPR_COMPLIANCE=true
SOX_COMPLIANCE=true

# Disaster Recovery Configuration
DR_ENABLED=true
DR_REGION=ap-southeast-1
DR_RTO_MINUTES=240
DR_RPO_MINUTES=60

# Auto Scaling Configuration
AUTO_SCALING_ENABLED=true
MIN_INSTANCES=2
MAX_INSTANCES=20
TARGET_CPU_UTILIZATION=70
SCALE_UP_COOLDOWN=300
SCALE_DOWN_COOLDOWN=600